<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.softweb.npk.activity.submenu.repetentes.FragmentProducaoBanana">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/titproducao"
                android:textSize="@dimen/tamanho_subtitulo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/espaÃ§amento" />

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/espa1"
                    android:gravity="center"/>
             <TextView
                 android:layout_width="20dp"
                 android:layout_height="wrap_content"
                 android:text="X"
                 android:gravity="center"/>
                <EditText
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/espa2"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="= 0 "
                    android:id="@+id/densidade_plantas"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pl_ha"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analise_solo"
                android:padding="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingLeft="@dimen/txtObs"
                    android:orientation="vertical"
                    android:layout_weight="0.95"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/p_mehlich"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center" />
                    <TextView
                        android:text="@string/k_mehlich"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/p_mehP"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/k_mehP"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent">
                    <TextView
                        android:text="@string/mg_dm3"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:text="@string/mg_dm3"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical" />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/produtividade_esperada"/>
                <EditText
                    android:id="@+id/produtividade"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tha"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_calcular"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/branco"
                android:onClick="calcularProducao"
                android:layout_gravity="right" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/umadois_l4"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:id="@+id/gramasPL1"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="bottom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/g_planta"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aduboPL1"
                    android:text="00-00-00"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/umadois_l5"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:id="@+id/gramasPL2"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="bottom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/g_planta"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aduboPL2"
                    android:text="00-00-00"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/tit_calagem"
                android:textSize="@dimen/tamanho_subtitulo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analise_solo"
                android:padding="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingLeft="@dimen/txtObs"
                    android:orientation="vertical"
                    android:layout_weight="0.95"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/sat_bases"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="@string/ctc_solo"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="@string/prnt_calcario"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/sat_basesP"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/ctcP"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/prntP"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="@string/percent"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:text="@string/cmolc_dm3"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:text="@string/percent"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_calcular"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/branco"
                android:onClick="calcularCalagemP"
                android:layout_gravity="right" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qtd_calcario"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/calagemP"
                    android:textColor="@color/colorAccent"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tha"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/mxm"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>